@using LinkManager.DAL.Models
@model IEnumerable<LinkManager.DAL.Models.Link>
@{
    ViewData["Title"] = "Home Page";
    var link = new Link();
}
<div class="row">
    <div class="col-4 px-5" style="justify-content: center">
        <div class="row py-4">
            <div class="col-12" style="text-align: center"><button data-target="#modalAddNew" class="btn btn-outline-primary" data-toggle="modal">Add new</button></div>
        </div>
        <div class="row py-4" style="justify-content: center">
            <div class="col-7" style="border:black;border-width:1px;border-style:solid;border-radius:100rem;">
                <div class="row" style="justify-content: center">Tags search</div>
                <div class="row" style="justify-content: center">KEK</div>
                <div class="row" style="justify-content: center">KEK</div>
                <div class="row" style="justify-content: center">KEK</div>
                <div class="row" style="justify-content: center">KEK</div>
                <div class="row" style="justify-content: center">KEK</div>

            </div>
        </div>
    </div>
    <div class="col-8">

        <div class="text-center">
            <table class="table">
                <thead>
                    <tr>
                        <th></th>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstOrDefault().Order)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstOrDefault().Url)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstOrDefault().Description)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td></td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Order)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Url)
                            </td>
                            <td>
                                @foreach (var a in item.LinkTags.Select(_ => _.Tag))
                                {
                                    @Html.DisplayFor(modelItem => a.Name + ",")
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade bd-example-modal-lg" id="modalAddNew" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <form>
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalAddNewLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-2"><label asp-for="@link.Order" class="control-label"></label></div>
                        <div class="col-3"><label asp-for="@link.Url" class="control-label"></label></div>
                        <div class="col-3"><label asp-for="@link.Description" class="control-label"></label></div>
                        <div class="col-3">Tags</div>
                    </div>
                    <hr/>
                    <div class="row">
                        <div class="col-2"><input asp-for="@(link.Order)" class="form-control" type="number"/></div>
                        <div class="col-3"><input asp-for="@(link.Url)" class="form-control" type="url"/></div>
                        <div class="col-3"><input asp-for="@(link.Description)" class="form-control" type="text"/></div>
                        <div class="col-3"><select></select></div>
                    </div>
                    <div class="row"><div asp-validation-summary="All" class="text-danger"></div></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </form>
    </div>
</div>